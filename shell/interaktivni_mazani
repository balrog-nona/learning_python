#!/bin/bash


# 4.31 - moje reseni
: <<'END'  # tvorba cvicnych souboru
i=1
while [ "$i" -le 20 ]; do
	touch /tmp/testy$i
	i=$((i + 1))
done
END

soubory=$(find "$@")
iterace=1
while read line; do
	read -p "Chces soubor "$line" opravdu smazat?  " odpoved
	case "$odpoved" in
		ano ) rm "$line";;
		ne ) continue;;
		stop ) break; exit;;
	esac
	iterace=$((iterace + 1))
	echo "$iterace"
done <<< "$soubory"








